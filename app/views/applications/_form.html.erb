<div class="row">
  <div class="col-xs-12">
    <%= form_for @application do |f| %>
      <div class="form-group">
        <%= f.label "Name" %>
        <%= f.text_field :name, {placeholder: "Enter the name of this application.", class: "form-control", required: "required"} %>
      </div>
      <div class="form-group">
        <%= f.label "Description" %>
        <%= f.text_area :description, {placeholder: "Enter a description of this application.", class: "form-control", required: "required"} %>
      </div>
      <div class="form-group">
        <%= f.label "App Link" %>
        <%= f.text_field :link, {placeholder: "Enter a link to the homepage of the application", class: "form-control", required: "required"} %>
      </div>
      <div class="form-group">
        <%= f.label "URL Identifier" %>
        <%= f.text_field :url_identifier, {placeholder: "Enter an identifying part of this applications URL (i.e. google.com)", class: "form-control", required: "required"} %>
      </div>
      <div class="input-group" id="developers_input" style="margin-bottom: 10px">
        <div class="form-group">
          <%= f.label "Developers" %>
          <select class="form-control" name="application[developers][]" id="developers" multiple="multiple">
            <option value=""></option>
            <% @developers.each do |developer| %>
            <option value="<%= developer.id %>" <% if @application.developers.include? developer.id.to_s then %>selected="selected"<% end %>><%= developer.email %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<script>
  $(document).ready(function() {
    $('#developers').select2({theme: 'bootstrap', placeholder: "Select developers for this application."});
  });
</script>