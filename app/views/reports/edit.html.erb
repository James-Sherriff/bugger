<div class="well">
  <h2>Update for report #<%= @report.ref_code %></h2>
  <br>
  <%= form_tag report_path(@report.ref_code), :method => :patch do %>
    <div class="form-group">
      <%= label_tag "Description" %>
      <%= text_area_tag :description, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= select_tag :status, options_for_select([["In Progress", 1], ["Dealt With", 2]]),class: "form-control", selected: @report.status %>
    </div>
  
    <%= submit_tag "Save Report Update", class: "btn btn-primary btn-lg" %>
  <% end %>
</div>