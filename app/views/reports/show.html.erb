<div class="row">
  <div class="col-xs-4">
    <% if @report.priority then %>
    <button class="btn btn-<%= if @report.priority == 0 then "primary" elsif @report.priority == 1 then "warning" elsif @report.priority == 2 then "danger" end %> pull-right" data-toggle="modal" data-target="#updatePriorityModal"><%= if @report.priority == 0 then "Low Priority" elsif @report.priority == 1 then "Medium Priority" elsif @report.priority == 2 then "High Priority" end %></button>
    <% else %>
    <button class="btn btn-primary pull-right" data-toggle="modal" data-target="#updatePriorityModal">Set Priority</button>
    <% end %>
    <p class="report-label">Application</p> <p class="report-content"><%= @report.application.name %></p>
    <p class="report-label">Current URL</p> <p class="report-content"><%= @report.current_url || "Not Provided" %></p>
    <p class="report-label">Browser Version</p> <p class="report-content"><%= @report.browser_version || "Not Provided" %></p>
    <p class="report-label">Browser Language</p> <p class="report-content"><%= @report.browser_language || "Not Provided" %></p>
    <p class="report-label">Browser Resolution</p> <p class="report-content"><%= @report.browser_resolution || "Not Provided" %></p>
    <p class="report-label">Device Resolution</p> <p class="report-content"><%= @report.device_resolution || "Not Provided" %></p>
    <p class="report-label">Timestamp</p> <p class="report-content"><%= @report.created_at %></p>
  </div>
  <div class="col-xs-8">
    <img class="thumbnail" src="<%= @report.screenshot_base64 %>" width="100%"/>
  </div>
</div>
<hr>
<div class="row" style="padding-bottom: 50px">
  <div class="col-xs-12">
    <p class="report-label">Description</p>
    <br>
    <p class="report-content"><%= @report.description || "Not Provided" %></p>
  </div>
</div>

 
<div class="modal fade" id="updatePriorityModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Update report priority</h4>
      </div>
      <div class="modal-body">
        <%= form_for @report do |f| %>
        <%= f.select :priority, [["Low", 0], ["Medium", 1], ["High", 2]] %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit class: "btn btn-primary" %>
        <% end %>      
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->